<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.MyTheme.YellowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/black_800</item>
    </style>


    <style name="FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MaterialSearchBarTheme" parent="MaterialSearchBarDark">
        <item name="mt_searchBarColor">@color/primaryColor</item>
        <item name="mt_dividerColor">@color/white_50</item>
        <item name="mt_navIconTint">@color/white_50</item>
        <item name="mt_searchIconTint">@color/white_50</item>
        <item name="mt_clearIconTint">@color/white_50</item>
        <item name="mt_menuIconTint">@color/white_50</item>
        <item name="mt_backIconTint">@color/white_50</item>
        <item name="mt_textCursorTint">@color/white_50</item>
        <item name="mt_textColor">@color/white_50</item>
        <item name="mt_hintColor">@color/white_50</item>
        <item name="mt_placeholderColor">@color/white_50</item>
        <item name="mt_highlightedTextColor">@color/white_50</item>
    </style>
</resources>
