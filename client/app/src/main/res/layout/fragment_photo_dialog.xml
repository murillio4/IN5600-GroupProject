<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:text="@string/photo_dialog_title" />

    <Button
        android:id="@+id/photo_dialog_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photo_dialog_open_gallery"
        style="@style/Widget.MyTheme.YellowButton"/>

    <Button
        android:id="@+id/photo_dialog_gallery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fab_margin"
        android:text="@string/photo_dialog_take_photo"
        style="@style/Widget.MyTheme.YellowButton"/>

    <Button
        android:id="@+id/photo_dialog_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photo_dialog_cancel" />

</LinearLayout>