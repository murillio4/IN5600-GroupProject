<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.activity.DisplayClaimActivity">

    <TextView
        android:id="@+id/view_claim_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dummy Title"
        android:textSize="24dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#404140"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/view_claim_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        tools:context=".ui.activity.DisplayClaimActivity"
        app:layout_constraintTop_toBottomOf="@id/view_claim_id"/>

    <Button
        android:id="@+id/view_claim_image_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:text="View Image"
        android:backgroundTintMode="multiply"
        android:backgroundTint="#999999"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/view_claim_map_fragment" />

    <TextView
        android:id="@+id/view_claim_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:textColor="#404140"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view_claim_image_button" />

    <TextView
        android:id="@+id/view_claim_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dummy description ..."
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view_claim_description_title"
        app:layout_constraintBottom_toTopOf="@+id/view_claim_edit_button"/>

    <Button
        android:id="@+id/view_claim_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="#404140"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>